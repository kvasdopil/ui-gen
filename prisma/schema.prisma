// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectMemberships ProjectMember[]
}

model Project {
  id        String   @id @default("default")
  name      String   @default("Default Project")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  screens         Screen[]
  projectMembers  ProjectMember[]
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  role      String   @default("editor") // editor, viewer, owner
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

model Screen {
  id        String   @id
  projectId String
  position  Json?    // { x: number, y: number }
  height    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project            Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  conversationPoints ConversationPoint[]

  @@index([projectId])
}

model ConversationPoint {
  id        String   @id @default(uuid())
  screenId  String
  prompt    String
  html      String
  title     String?
  timestamp BigInt   // Unix timestamp in milliseconds
  arrows    Json?    // Array of ConversationPointArrow
  index     Int      // Order within screen
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  screen Screen @relation(fields: [screenId], references: [id], onDelete: Cascade)

  @@index([screenId])
  @@index([screenId, index])
}
